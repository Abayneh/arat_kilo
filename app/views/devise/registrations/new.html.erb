
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h2>Sign up</h2>
        <%= f.input :email, required: true, autofocus: true, class: "form-signin" %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), class: "form-signin"%>
        <%= f.input :password_confirmation, required: true, class: "form-signin" %>
        <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <%= render "devise/shared/links" %>
    </div>

<% end %>
